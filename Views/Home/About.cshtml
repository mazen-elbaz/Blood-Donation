@{
    ViewData["Title"] = "About";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-4 text-center mb-5">About Blood Donation Tracker</h1>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-heart text-danger"></i> Our Mission</h3>
                    <p class="card-text">To create a seamless platform that connects blood donors with hospitals, ensuring that life-saving blood is available when and where it's needed most.</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-target text-primary"></i> Our Vision</h3>
                    <p class="card-text">To eliminate blood shortages and create a world where no life is lost due to unavailability of blood.</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-users text-success"></i> How It Works</h3>
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <i class="fas fa-user-plus fa-2x text-primary mb-2"></i>
                            <h5>1. Register</h5>
                            <p>Donors and hospitals register on our platform</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="fas fa-bell fa-2x text-warning mb-2"></i>
                            <h5>2. Request</h5>
                            <p>Hospitals post blood requests with urgency levels</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="fas fa-handshake fa-2x text-success mb-2"></i>
                            <h5>3. Connect</h5>
                            <p>Donors accept requests and save lives</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-shield-alt text-info"></i> Safety & Security</h3>
                    <p class="card-text">We prioritize the safety and security of all our users. All data is encrypted and protected, and we follow strict guidelines to ensure the safety of both donors and recipients.</p>
                </div>
            </div>
        </div>
    </div>
</div>

