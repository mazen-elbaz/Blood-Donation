@{
    ViewData["Title"] = "Contact";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-4 text-center mb-5">Contact Us</h1>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title"><i class="fas fa-envelope text-primary"></i> Get in Touch</h3>
                            <p class="card-text">Have questions or need support? We're here to help!</p>
                            
                            <div class="mb-3">
                                <i class="fas fa-phone text-success"></i>
                                <strong> Phone:</strong> (555) 123-4567
                            </div>
                            
                            <div class="mb-3">
                                <i class="fas fa-envelope text-primary"></i>
                                <strong> Email:</strong> support@bloodtracker.com
                            </div>
                            
                            <div class="mb-3">
                                <i class="fas fa-map-marker-alt text-danger"></i>
                                <strong> Address:</strong><br>
                                123 Healthcare Drive<br>
                                Medical District, NY 10001
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title"><i class="fas fa-clock text-warning"></i> Support Hours</h3>
                            <p class="card-text">We're available to help you 24/7</p>
                            
                            <div class="mb-2">
                                <strong>Monday - Friday:</strong> 8:00 AM - 8:00 PM
                            </div>
                            
                            <div class="mb-2">
                                <strong>Saturday:</strong> 9:00 AM - 6:00 PM
                            </div>
                            
                            <div class="mb-2">
                                <strong>Sunday:</strong> 10:00 AM - 4:00 PM
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle"></i>
                                    Emergency support available 24/7 for urgent blood requests
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-body text-center">
                    <h3 class="card-title"><i class="fas fa-question-circle text-info"></i> Frequently Asked Questions</h3>
                    <p class="card-text">Can't find what you're looking for? Check our FAQ section or contact us directly.</p>
                    <a href="mailto:support@bloodtracker.com" class="btn btn-primary">
                        <i class="fas fa-envelope"></i> Send us an Email
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

