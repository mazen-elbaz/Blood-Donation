@model IEnumerable<BloodDonationTracker.Models.Donation>
@{
    ViewData["Title"] = "All Donations";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-handshake text-primary"></i> All Donations</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Donor</th>
                            <th>Hospital</th>
                            <th>Blood Type</th>
                            <th>Quantity</th>
                            <th>Donation Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@donation.Donor.User.FullName</strong>
                                    <br>
                                    <small class="text-muted">@donation.Donor.User.City</small>
                                </td>
                                <td>
                                    <strong>@donation.BloodRequest.Hospital.HospitalName</strong>
                                    <br>
                                    <small class="text-muted">@donation.BloodRequest.Hospital.User.FullName</small>
                                </td>
                                <td><span class="badge bg-primary">@donation.BloodRequest.BloodType</span></td>
                                <td>@donation.Quantity unit(s)</td>
                                <td>@donation.DonationDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge @(donation.Status == "Completed" ? "bg-success" : donation.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                        @donation.Status
                                    </span>
                                </td>
                                <td>
                                    @if (donation.Status == "Pending")
                                    {
                                        <form asp-action="UpdateDonationStatus" method="post" class="d-inline">
                                            <input type="hidden" name="donationId" value="@donation.Id">
                                            <input type="hidden" name="status" value="Completed">
                                            <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Mark this donation as completed?')">
                                                <i class="fas fa-check"></i> Complete
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

