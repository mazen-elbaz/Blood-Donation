@model BloodDonationTracker.Models.Donor
@{
    ViewData["Title"] = "Donor Profile";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-user-edit text-primary"></i> My Profile</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-user"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" value="@Model.User.FirstName" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" value="@Model.User.LastName" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" value="@Model.User.Email" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">City</label>
                                    <input type="text" class="form-control" value="@Model.User.City" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BloodType" class="form-label">Blood Type</label>
                                    <select asp-for="BloodType" class="form-select">
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IsAvailable" class="form-label">Availability</label>
                                    <select asp-for="IsAvailable" class="form-select">
                                        <option value="true">Available for Donation</option>
                                        <option value="false">Currently Unavailable</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastDonationDate" class="form-label">Last Donation Date</label>
                            <input asp-for="LastDonationDate" type="date" class="form-control">
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Donor")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Donation Guidelines</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Wait at least 56 days between donations
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Be in good health and feeling well
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Weigh at least 110 pounds
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Be at least 16 years old
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

