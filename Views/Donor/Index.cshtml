@model BloodDonationTracker.Models.Donor
@{
    ViewData["Title"] = "Donor Dashboard";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-user-md text-primary"></i> Donor Dashboard</h1>
                <div>
                    <a href="@Url.Action("ViewRequests", "Donor")" class="btn btn-primary">
                        <i class="fas fa-search"></i> View Blood Requests
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-tint fa-2x text-danger mb-2"></i>
                    <h5 class="card-title">Blood Type</h5>
                    <h3 class="text-primary">@ViewBag.Donor.BloodType</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-map-marker-alt fa-2x text-success mb-2"></i>
                    <h5 class="card-title">Location</h5>
                    <h6 class="text-muted">@ViewBag.Donor.User.City</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h5 class="card-title">Status</h5>
                    <h6 class="@(ViewBag.Donor.IsAvailable ? "text-success" : "text-warning")">
                        @(ViewBag.Donor.IsAvailable ? "Available" : "Unavailable")
                    </h6>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-calendar fa-2x text-info mb-2"></i>
                    <h5 class="card-title">Last Donation</h5>
                    <h6 class="text-muted">@ViewBag.Donor.LastDonationDate.ToString("MMM dd, yyyy")</h6>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-history"></i> Recent Donations</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentDonations != null && ViewBag.RecentDonations.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Hospital</th>
                                        <th>Blood Type</th>
                                        <th>Quantity</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var donation in ViewBag.RecentDonations)
                                    {
                                        <tr>
                                            <td>@donation.BloodRequest.Hospital.User.FullName</td>
                                            <td><span class="badge bg-primary">@donation.BloodRequest.BloodType</span></td>
                                            <td>@donation.Quantity unit(s)</td>
                                            <td>
                                                <span class="badge @(donation.Status == "Completed" ? "bg-success" : donation.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                                    @donation.Status
                                                </span>
                                            </td>
                                            <td>@donation.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No donations yet. Start by viewing available blood requests!</p>
                            <a href="@Url.Action("ViewRequests", "Donor")" class="btn btn-primary">
                                <i class="fas fa-search"></i> Find Requests
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-cog"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Profile", "Donor")" class="btn btn-outline-primary">
                            <i class="fas fa-user-edit"></i> Update Profile
                        </a>
                        <a href="@Url.Action("ViewRequests", "Donor")" class="btn btn-outline-success">
                            <i class="fas fa-search"></i> View Requests
                        </a>
                        <a href="@Url.Action("MyDonations", "Donor")" class="btn btn-outline-info">
                            <i class="fas fa-history"></i> My Donations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

