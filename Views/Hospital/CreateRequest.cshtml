@model BloodDonationTracker.Models.BloodRequest
@{
    ViewData["Title"] = "Create Blood Request";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-plus text-primary"></i> Create Blood Request</h1>
                <a href="@Url.Action("Index", "Hospital")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateRequest" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BloodType" class="form-label">Blood Type Required</label>
                                    <select asp-for="BloodType" class="form-select" required>
                                        <option value="">Select Blood Type</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label">Quantity Needed (units)</label>
                                    <input asp-for="Quantity" type="number" class="form-control" min="1" max="10" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Urgency" class="form-label">Urgency Level</label>
                            <select asp-for="Urgency" class="form-select" required>
                                <option value="Low">Low - Can wait 1-2 weeks</option>
                                <option value="Normal">Normal - Needed within a week</option>
                                <option value="High">High - Needed within 2-3 days</option>
                                <option value="Critical">Critical - Needed immediately</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Request Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Please provide details about the blood request, patient condition, and any special requirements..." required></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Hospital")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Request Guidelines</h5>
                </div>
                <div class="card-body">
                    <h6>Urgency Levels:</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-1">
                            <span class="badge bg-info">Low</span> - Routine procedures
                        </li>
                        <li class="mb-1">
                            <span class="badge bg-primary">Normal</span> - Scheduled surgeries
                        </li>
                        <li class="mb-1">
                            <span class="badge bg-warning">High</span> - Emergency cases
                        </li>
                        <li class="mb-1">
                            <span class="badge bg-danger">Critical</span> - Life-threatening situations
                        </li>
                    </ul>
                    
                    <h6 class="mt-3">Best Practices:</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-1">
                            <i class="fas fa-check text-success"></i>
                            Be specific about blood type
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-check text-success"></i>
                            Provide clear description
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-check text-success"></i>
                            Update status promptly
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

