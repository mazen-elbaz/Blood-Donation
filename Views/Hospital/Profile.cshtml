@model BloodDonationTracker.Models.Hospital
@{
    ViewData["Title"] = "Hospital Profile";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-user-edit text-primary"></i> Hospital Profile</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-hospital"></i> Hospital Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Contact Person</label>
                                    <input type="text" class="form-control" value="@Model.User.FullName" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" value="@Model.User.Email" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HospitalName" class="form-label">Hospital Name</label>
                            <input asp-for="HospitalName" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Hospital Address</label>
                            <textarea asp-for="Address" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" required>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Hospital")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Hospital Guidelines</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Provide accurate blood type requirements
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Set appropriate urgency levels
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Update request status promptly
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Maintain contact information
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

