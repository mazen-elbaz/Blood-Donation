@model IEnumerable<BloodDonationTracker.Models.BloodRequest>
@{
    ViewData["Title"] = "My Blood Requests";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-list text-primary"></i> My Blood Requests</h1>
                <div>
                    <a href="@Url.Action("CreateRequest", "Hospital")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Request
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Blood Type</th>
                                <th>Quantity</th>
                                <th>Urgency</th>
                                <th>Status</th>
                                <th>Request Date</th>
                                <th>Fulfilled Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-primary">@request.BloodType</span></td>
                                    <td>@request.Quantity units</td>
                                    <td>
                                        <span class="badge @(request.Urgency == "Critical" ? "bg-danger" : request.Urgency == "High" ? "bg-warning" : "bg-info")">
                                            @request.Urgency
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(request.Status == "Open" ? "bg-warning" : request.Status == "Fulfilled" ? "bg-success" : "bg-danger")">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (request.FulfilledDate.HasValue)
                                        {
                                            @request.FulfilledDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("RequestDetails", "Hospital", new { id = request.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            @if (request.Status == "Open")
                                            {
                                                <form asp-action="UpdateRequestStatus" method="post" class="d-inline">
                                                    <input type="hidden" name="requestId" value="@request.Id">
                                                    <input type="hidden" name="status" value="Fulfilled">
                                                    <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Mark this request as fulfilled?')">
                                                        <i class="fas fa-check"></i> Fulfill
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
            <h3 class="text-muted">No Blood Requests Yet</h3>
            <p class="text-muted">You haven't created any blood requests yet. Create your first request!</p>
            <a href="@Url.Action("CreateRequest", "Hospital")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Blood Request
            </a>
        </div>
    }
</div>

